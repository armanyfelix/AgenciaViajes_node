.row.proximos-viajes
    each viaje in viajes 
            .col-md-6.col-lg-4.mb-4 
                .card 
                    img.card-img-top(src=`img/destinos_${viaje.imagen}.jpg`)
                    .card-body 
                        h2=viaje.titulo 
                        p 
                            svg.icon.icon-tabler.icon-tabler-calendar-event(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#fd0061' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                rect(x='4' y='5' width='16' height='16' rx='2')
                                line(x1='16' y1='3' x2='16' y2='7')
                                line(x1='8' y1='3' x2='8' y2='7')
                                line(x1='4' y1='11' x2='20' y2='11')
                                rect(x='8' y='15' width='2' height='2')

                            | #{viaje.fecha_ida} -  #{viaje.fecha_vuelta}

                        p 
                            svg.icon.icon-tabler.icon-tabler-plane(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#fd0061' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                path(d='M16 10h4a2 2 0 0 1 0 4h-4l-4 7h-3l2 -7h-4l-2 2h-3l2 -4l-2 -4h3l2 2h4l-2 -7h3z')

                            | #{viaje.disponibles} Disponibles

                        p= viaje.descripcion.substr(0, 100) + '...'

                        a(href=`viajes/${viaje.slug}`, class= "btn btn-success btn-block") Más Información
    